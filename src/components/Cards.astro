---
import Card from "../components/Card.astro";
import { services } from "../data/services";
---

<section>
  <h2 class="text-center text-2xl md:text-5xl m-10 font-bold">
    OUR MOST POPULAR TOURS
  </h2>
  <div
    class="container mx-auto px-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
  >
    {
      services.map(({id, title, image, description, altText, info}) => (
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <Card
            id={id}
            image={image}
            title={title}
            infose={info}
            description={description}
            altText={altText}
          />
        </div>
      ))
    }
  </div>
</section>
