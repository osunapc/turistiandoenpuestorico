---
import { getCollection } from "astro:content";

const services = await getCollection("services");
import {
	Astronav,
	MenuItems,
	MenuIcon,
	Dropdown,
	DropdownItems,
} from "astro-navbar";
---

<header class="lg:flex p-5 gap-5 bg-gray-950">
	<Astronav>
		<div class="flex w-full justify-between">
			<a href="/" class="flex items-center space-x-3 rtl:space-x-reverse"
				><img
					class="w-10"
					src="/logo.png"
					alt="logo turisteando en puerto rico"
				/><span
					class="hidden md:block self-center md:text-1 font-semibold whitespace-nowrap text-gray-200"
					>TuristeandoEnPuertoRico</span
				>
				<div class="block lg:hidden">
					<MenuIcon class="w-4 h-4 text-gray-800" />
				</div>
			</a>
			<MenuItems class="hidden lg:flex">
				<ul class="flex flex-col lg:flex-row lg:gap-5">
					<li><a href="/">Home</a></li>
					<li><a href="/contact">Contact</a></li>
					<li>
						<Dropdown class="group">
							<button class="flex items-center">
								<span> Services </span>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="3"
									stroke="currentColor"
									class="w-3 h-3 mt-0.5 group-open:rotate-180"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
								</svg>
							</button>
							<DropdownItems class="relative">
								<div class="absolute top-6 right-0 z-30 bg-black w-[200px]">
									<ul
										class="py-2 text-sm text-gray-200"
										aria-labelledby="dropdownLargeButton"
									>
										{
											services.map((service) => {
												const { data, slug } = service;
												const { title } = data;
												return (
													<li>
														<a
															href={slug}
															class="block px-4 py-2 hover:bg-gray-600 hover:text-white"
														>
															{title}
														</a>
													</li>
												);
											})
										}
									</ul>
								</div>
							</DropdownItems>
						</Dropdown>
					</li>
				</ul>
			</MenuItems>
		</div>
	</Astronav>
</header>
